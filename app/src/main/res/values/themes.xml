<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 메인 스타일 -->
    <style name="Theme.DontLate" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="backgroundColor">@color/ivory</item>
    </style>

    <!--다크모드 스타일-->
    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        ....
        <item name="android:windowSplashScreenBackground" tools:targetApi="S">@color/ivory</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="S">@mipmap/mainlogo</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="S">@color/ivory</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="S">@color/ivory</item>
        <item name="postSplashScreenTheme" tools:targetApi="S">@style/Theme.DontLate</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="backgroundColor">@color/ivory</item>
    </style>

    <style name="SeekBarColor"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">#FFD249</item>
    </style>

    <!--캘린더 스타일-->
    <style name="DatePickerTheme" parent="Theme.AppCompat.Light">
    <!-- 상단 Title 배경색 -->
    <item name="colorAccent">@color/orange</item>
    <!-- 선택한 날짜 배경 색 -->
    <item name="colorControlActivated">@color/deep_orange</item>
    <!-- Highlight item color-->
    <item name="colorControlHighlight">@color/orange</item>
    <!--Calender Background color -->
    <item name="android:colorBackground">@color/white</item>
    <!-- Week TextColor-->
    <item name="android:textColorSecondary">@color/black</item>
    <!-- Calender Number color arrow color (< >) -->
    <item name="android:textColorPrimary">@color/black</item>
    <!--day , month TextColor-->
    <item name="android:textColorPrimaryInverse">@color/black</item>
    <!-- year-->
    <item name="android:textColorSecondaryInverse">@color/black</item>
    <!-- 취소/확인버튼 색상 -->
    <item name="android:textColor">@color/orange</item>
    <item name="android:textSize">20sp</item>
    <item name="cornerSize">16dp</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="fontFamily">"@style/TextAppearance.AppCompat.Medium"</item>

</style>
</resources>